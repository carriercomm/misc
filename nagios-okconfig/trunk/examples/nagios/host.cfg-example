

define host {
	use		default-host



	host_name	HOSTNAME
	address		IPADDR

        contact_groups  +GROUP-admins,GROUP-prod-admins
        hostgroups      +GROUP-prod-servers,GROUP-servers
};


define service{
        use                             generic-service
        host_name                       HOSTNAME
        service_description             Ping
        check_command                   check_ping!100.0,20%!500.0,60%
	contact_groups			+GROUP-admins,GROUP-prod-admins
}




